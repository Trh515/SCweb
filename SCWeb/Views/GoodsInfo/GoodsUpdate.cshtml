    <script type="text/javascript">
        $(function () {

            //绑定波段下拉框
            $.get("/GoodsInfo/GetDDLSCJD02", {}, function (data) {

                var ddlBD = "";
                //$("#xuanz_ul_boduan").html("");//清空DDL页数
                var dt = eval("(" + data + ")");
                for (var i = 0; i < dt.length; i++) {
                    ddlBD += "<option values=" + dt[i]["SXMC"] + ">" + dt[i]["SXMC"] + "</option>";
                }
                $("#SCJD02").append(ddlBD);

                //下拉框绑定编辑穿过来的数据
                $("#SCJD02").val('@ViewBag.SCJD02');
                $("#SCJD03").val('@ViewBag.SCJD03');
                $("#SCJD04").val('@ViewBag.SCJD04');
                $("#QXK").val('@ViewBag.QXK');
                @*$("#huoqi70day").val('@ViewBag.huoqi70day');*@
                $("#ddlColumnsSource").val('@ViewBag.SCJD06');
            })

            $('#SCJD02').delegate('option', 'click', function () {
                var xuanze = $(this).find("option").html();
                $("#SCJD02").attr("values", $(this).find("option").attr("values"))
                $("#SCJD02").html(xuanze)
            });

            var id = "@ViewBag.id";
            //var SCJD06 = 1;
            //获取款式下拉框的值
            //$("#ddlColumnsSource").change(function () {
            //    SCJD06 = $(this).val();
            //})
            //保存编辑
            $("#btnBC").click(function () {
                $.ajax({
                    url: "/GoodsInfo/GetEditSCJDB",
                    timeout: 0, //超时时间设置，单位毫秒
                    type: "post",
                    data:
                        {
                            id: id,
                            SCJD02: $("#SCJD02").val(),
                            SCJD03: $("#SCJD03").val(),
                            SCJD04: $("#SCJD04").val(),
                            SCJD05: $("#SCJD05").val(),
                            SCJD06: $("#SCJD06").val(),
                            SCJD07: $("#SCJD07").val(),
                            SCJD08: $("#SCJD08").val(),
                            SCJD09: $("#SCJD09").val(),
                            SCJD10: $("#SCJD10").val(),
                            SCJD11: $("#SCJD11").val(),
                            SCJD12: $("#SCJD12").val(),
                            SCJD01: $("#SCJD01").val(),
                        SCJD93: $("#SCJD93").val(),
                        QXK: $("#QXK").val()
                        //huoqi70day: $("$huoqi70day").val()
                        },
                    success: function (data) {
                        if (data == "OK") {
                            layer.open({
                                title: '消息',
                                content: '编辑成功！',
                                btn: ['确定'],
                                yes: function (index, layero) {
                                    window.history.back(-1);
                                }
                            });
                        } else if (data == "Operation") {
                            layer.alert("您没有权限请和管理员联系");
                        }
                        else {
                            layer.alert("可能是哪里出错了！");
                        }

                    },
                    error: function () {
                        layer.alert("服务器连接超时");
                    }
                })
            })
        })
        

    </script>
