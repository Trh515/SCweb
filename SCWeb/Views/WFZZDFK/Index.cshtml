        function Load() {
            layui.use(['util', 'table', 'layer'], function () {
                var table = layui.table;
                table.render({
                    elem: '#wffk'
                    , url: '/WFZZDFK/INdexList/',
                    toolbar: '#toolbarDemo',
                    defaultToolbar: ['filter', 'print'],
                    totalRow: true,
                    height: 480,
                    method: 'POST',
                    //where: {
