                    //},
                    page: true,
                    cols: [[
                        //{ type: 'checkbox', fixed: true },,
                        { field: 'Id', title: '编号', width: 65, },
                        { field: 'GHS', title: '供货商名称', width: 205, edit: true }
                        , { field: 'GHSDZ', title: '地址', width: 200, edit: true},
                        { field: 'GHSPhone', title: '电话', width: 200, edit: true },
