<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/js/layui-v2.4.5/layui/css/layui.css" rel="stylesheet" media="all" />
</head>
<body>
    @**@
    <div class="layui-col-md6">
        <div class="layui-card" style="width:2000px">
            <div class="layui-card-header">  <button class="layui-btn layui-btn-sm" onclick="SUB()"><i class="layui-icon"></i></button></div>
            <div class="layui-card-body">
                <div>
                    <table>
                        <tr>
                            <td><label class="layui-form-label" style="width:auto">供货商名称</label></td>
                            <td> <div class="layui-form-item" style="width:200px"><input type="text" name="title" id="ghsmc" lay-verify="title" autocomplete="off" placeholder="" class="layui-input" style="width:200px" value=""></div></td>
                            <td><label class="layui-form-label" style="width:auto">地址</label></td>
                            <td> <div class="layui-form-item" style="width:200px"><input type="text" name="title" id="dz" lay-verify="title" autocomplete="off" placeholder="" class="layui-input" style="width:200px" value=""></div></td>
                            <td><label id="lable" class="layui-form-label" style="width:auto">电话</label></td>
                            <td> <div class="layui-form-item" style="width:200px"><input type="text" name="title" id="phone" lay-verify="title" autocomplete="off" placeholder="" class="layui-input" style="width:200px" value=""></div></td>
                        </tr>
                        <tr>
                            <td><label id="lable" class="layui-form-label" style="width:auto">开户行</label></td>
                            <td> <div class="layui-form-item" style="width:200px"><input type="text" name="title" id="khh" lay-verify="title" autocomplete="off" placeholder="" class="layui-input" style="width:200px" value=""></div></td>
                            <td><label id="lable" class="layui-form-label" style="width:auto">银行账号</label></td>
                            <td> <div class="layui-form-item" style="width:200px"><input type="text" name="title" id="zh" lay-verify="title" autocomplete="off" placeholder="" class="layui-input" style="width:200px" value=""></div></td>
                        </tr>
                        <tr>
                            <td style=""><div class="layui-form-item"><button class="layui-btn layui-btn-danger" onclick="Submit()">保存</button></div></td>
                        </tr>
                   
                    </table>
                   
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/js/layui-v2.4.5/layui/layui.js"></script>
    <script src="~/js/Js扩展.js"></script>
    <script src="~/js/DataTableExtend.js"></script>
    <script type="text/javascript">
        $(function () {
            layui.use(['layer'], function () {
                var layer = layui.layer;
            })
        });
        function SUB() {
            location.href = "/WFZZDFK/Index/"
        }
        function Submit()
        {
            layer.confirm('确认提交吗？', function () {
                $.ajax({
                    url: '/WFZZDFK/SUBmit/',
                    type: 'post',
                    data: {
                        ghsmc: $("#ghsmc").val(),
                        dz: $("#dz").val(),
                        phone: $("#phone").val(),
                        khh: $("#khh").val(),
                        zh: $("#zh").val()
                     
                    },
                    success: function (data) {
                        if (data == "y") {
                            layer.msg('保存成功!', { icon: 1, time: 1000 }, function () {
                                SUB();
                            });
                        }
                        else if (data == "n") {
                            layer.msg('保存失败!', { icon: 1, time: 1000 }, function () {
                                SUB();
                            });
                        }
                        else if (data == "D") {
                            layer.msg('', { icon: 1, time: 1000 }, function () {
                                SUB();
                            });
                        }
                    }
                })
            });
        }
    </script>
</body>
</html>
