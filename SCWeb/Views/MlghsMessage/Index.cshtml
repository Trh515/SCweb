                                }
                                else {
                                    return "";
                                }
                            }
                        },
                        {
                            field: 'SHzt', title: '付款状态', width: 135, style: "color: #EA0000; font-weight:bold;", templet: function (d) {
                                if (d.SHzt == 1) {
                                    return "已付20%定金额";
                                }
                                else if (d.SHzt == 2) {
                                    return "已付60%中期款";
                                }
                                else if (d.SHzt == 3) {
                                    return "已付尾款";
                                }
                                else {
